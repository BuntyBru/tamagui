{
  "$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": ["**/*/generated-*.ts", ".tamagui"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noInnerDeclarations": "off",
        "noUnnecessaryContinue": "off",
        "noUnusedLabels": "off",
        "noUnusedVariables": "off",
        "noUnusedImports": "off",
        "noUnusedPrivateClassMembers": "off",
        "noUndeclaredDependencies": "off",
        "noNewSymbol": "off",
        "noUndeclaredVariables": "off",
        "noUnreachable": "off",
        "noUnusedFunctionParameters": "off",
        "noChildrenProp": "off",
        "noConstAssign": "off",
        "noFallthroughSwitchClause": "off",
        "noGlobalObjectCalls": "off",
        "noInvalidConstructorSuper": "off",
        "noInvalidNewBuiltin": "off",
        "noInvalidUseBeforeDeclaration": "off",
        "noNonoctalDecimalEscape": "off",
        "noPrecisionLoss": "off",
        "noSelfAssign": "off",
        "noSetterReturn": "off",
        "noSwitchDeclarations": "off",
        "noUnnecessaryConstructor": "off",
        "noUnreachableSuper": "off",
        "noUnsafeFinally": "off",
        "noUnsafeOptionalChaining": "off",
        "noVoidElementsWithChildren": "off",
        "useArrayLiterals": "off",
        "useGetterReturn": "off",
        "useIsNan": "off",
        "useValidForDirection": "off",
        "useYield": "off",
        "noRenderReturnValue": "off",
        "useIsArray": "off"
      },
      "suspicious": {
        "noDebugger": "off",
        "noRedundantUseStrict": "off",
        "noArrayIndexKey": "off",
        "noAssignInExpressions": "off",
        "noAsyncPromiseExecutor": "off",
        "noCatchAssign": "off",
        "noClassAssign": "off",
        "noCommentText": "off",
        "noCompareNegZero": "off",
        "noConfusingLabels": "off",
        "noConfusingVoidType": "off",
        "noControlCharactersInRegex": "off",
        "noDoubleEquals": "off",
        "noDuplicateCase": "off",
        "noDuplicateClassMembers": "off",
        "noDuplicateJsxProps": "off",
        "noDuplicateObjectKeys": "off",
        "noDuplicateParameters": "off",
        "noEmptyBlockStatements": "off",
        "noEmptyInterface": "off",
        "noExplicitAny": "off",
        "noExtraNonNullAssertion": "off",
        "noFallthroughSwitchClause": "off",
        "noFunctionAssign": "off",
        "noGlobalAssign": "off",
        "noImplicitAnyLet": "off",
        "noImportAssign": "off",
        "noLabelVar": "off",
        "noMisleadingCharacterClass": "off",
        "noMisleadingInstantiator": "off",
        "noPrototypeBuiltins": "off",
        "noRedeclare": "off",
        "noRedundantUseStrict": "off",
        "noSelfCompare": "off",
        "noShadowRestrictedNames": "off",
        "noSparseArray": "off",
        "noUnsafeDeclarationMerging": "off",
        "noUnsafeNegation": "off",
        "useDefaultSwitchClauseLast": "off",
        "useValidTypeof": "off",
        "useNamespaceKeyword": "off",
        "noThenProperty": "off",
        "noApproximativeNumericConstant": "off",
        "noMisrefactoredShorthandAssign": "off",
        "noConsoleLog": "off",
        "noEmptyBlockStatements": "off"
      },
      "style": {
        "noUselessElse": "off",
        "noVar": "off",
        "useConst": "off",
        "useTemplate": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "noArguments": "off",
        "noCommaOperator": "off",
        "noInferrableTypes": "off",
        "noUnusedTemplateLiteral": "off",
        "useFragmentSyntax": "off",
        "useOptionalChain": "off",
        "useAsConstAssertion": "off",
        "useCollapsedElseIf": "off",
        "useConsistentArrayType": "off",
        "useForOf": "off",
        "useShorthandAssign": "off",
        "useSingleVarDeclarator": "off",
        "useWhile": "off",
        "noRestrictedGlobals": "off",
        "noImplicitBoolean": "off",
        "useExponentiationOperator": "off",
        "useNumericLiterals": "off",
        "useLiteralKeys": "off",
        "useNodejsImportProtocol": "off",
        "useImportType": "off",
        "useExportType": "off",
        "useShorthandFunctionType": "off",
        "useBlockStatements": "off",
        "useDefaultParameterLast": "off",
        "useEnumInitializers": "off",
        "useFunctionDeclaration": "off",
        "useNamingConvention": "off",
        "useShorthandArrayType": "off",
        "useSelfClosingElements": "off",
        "useConsistentBuiltinInstantiation": "off",
        "useConsistentGridAreas": "off",
        "useFilenamingConvention": "off",
        "useRegexLiterals": "off",
        "useThrowOnlyError": "off",
        "useTopLevelRegex": "off",
        "useValidAriaValues": "off",
        "useValidAriaRole": "off",
        "useValidLang": "off",
        "noYodaExpression": "off"
      }
    }
  }
}
